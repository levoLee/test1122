.myloading {
  padding: 20rpx 0;
  text-align: center;
  font-size: 14px;
}
.nodata {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0; 
	margin: auto;
	text-align: center;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 30rpx;
}
.nodata image {
	width: 200rpx;
	height: 200rpx;
}
.addComment {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}
.addComment .modal{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 99;
	background: rgba(0,0,0,.6);
}
.addComment .detail {
	position: absolute;
	z-index: 100;
	height: 400rpx;
	background: #fff;
	bottom: 0;
	left: 0;
	width: 100%;
}
.addComment .detail .top {
	display: flex;
	padding-top: 20rpx;
}
.addComment .detail .top view {
	width: 50%;
	text-align: left;
	margin-left: 20rpx;
	font-size: 28rpx;
}
.addComment .detail .top view:last-child {
	text-align: right;
	margin-right: 20rpx;
}
.addComment .detail .content {
	padding: 0 20rpx;
	margin-top: 20rpx;
}
.addComment .detail .content textarea {
	background: #eee;
	font-size: 28rpx;
	width: 100%;
	padding: 10px;
	box-sizing: border-box;
}
.popUp {
	background: rgba(255,255,255,.9);
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
}
.popUp .close {
	position: absolute;
	top: 30rpx;
	right: 30rpx;
	width: 50rpx;
	height: 50rpx;
}
.popUp .popUpbtns {
	display: flex;
}
.popUp .popUpbtns {
	width: 360rpx;
	margin: auto;
	padding-top: 45%;
}
.popUp .popUpbtns .listImg {
	text-align: center;
	width: 120rpx;
	margin: 0 20rpx;
}
.popUp .popUpbtns .listImg view {
	text-align: center;
	width: 100%;
}
.popUp .popUpbtns image {
	width: 120rpx;
	height: 120rpx;	
}


