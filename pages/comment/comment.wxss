
/**index.wxss**/
page {
	background: #eee;
	color: #333;
	font-size: 30prx;
}
.comment {
	background: #fff;
	padding-bottom: 30rpx;
}
.comment .title {
	display: flex;
	width: 100%;
	margin: auto;
	padding: 20rpx 40rpx;
	border: 1px solid #eee;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 30prx;
	color: #000;
}
.comment .title view.titleInput {
	width: 62%;
	height: 100%;
	margin-left: 16rpx;
	margin-right: 3%;	
}
.comment .title .titleInput input {
	background: #fff;
	height: 100%;
	font-size: 30rpx;
}
.comment .section {
	padding: 0 40rpx;
}
.comment .section textarea {
	padding: 20rpx 0rpx;
	width: 100%;
}
.section textarea {
	height: 500rpx;
	color: #333;
	font-size: 30rpx;
}
.comment .commentBtns {
	display: flex;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	background: rgba(0,0,0,.7);
	color: #fff;
}
.comment .commentBtns view {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 28rpx;
}
.comment .penBtn image {
	height: 80rpx;
	width: 210rpx;
}
.comment .upload {
	margin-left: 50rpx;
}
.comment .upload image {
	width: 200rpx;
	height: 200rpx;
} 
.fabu {
	padding: 0 20rpx 0 40rpx;
	display: flex;
}
.fabu .left {
	color: #999;
	width: 70%;
	font-size: 26rpx;
	margin-top: 48rpx;
}
.fabu .left text {
	color: #4ca3c3;
}


