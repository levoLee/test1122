
/**index.wxss**/
page {
	background: #eee;
	color: #333;
}
.right {
	float: right;
}
.zone {
	width: 100%;
	display: flex;
	background: #fff;
	margin-top: 20rpx;
	padding: 40rpx 0;
}
.zone .block {
	width: 33.33%;
	border-right: 2rpx solid #ddd;
	box-sizing: border-box;
	text-align: center;
	font-size: 30rpx;
}
.zone .block:last-child {
	border: none;
}
.zone .block image {
	width: 70rpx;
	height: 70rpx;
	margin-bottom: 10rpx;
}
.zone .block.active {
	color: #cb3d31;
}
.all, .wechat, .deal {
	margin-top: 14rpx;
}
.wechat .list, .deal .list {
	border: none;
}
.deal .list .list_all .title {
	font-weight: 400;
}
.deal .list .list_all .title .active {
	color: #2990cc;
}
.deal .list .list_all .info{
	margin-top: 20rpx;
	font-size: 24rpx;
}
.all .list .list_all .info,
.wechat .list .list_all .info,
.deal .list .list_all .info {
 	display: flex;
 }
.deal .info_text,
.all .info_text,
.wechat .info_text {
	margin-top: 10rpx;
}
.all .info_text text,
.wechat .info_text text,
.deal .info_text text {
	margin: 0 6rpx;
}
.all .portait,
.deal .portait,
.wechat .portait {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50rpx;
}
.nodata {
	text-align: center;
	margin: 30rpx 0;
	font-size: 30rpx;
	top: 30%;
}
.nodata image {
	width: 200rpx;
	height: 200rpx;
}