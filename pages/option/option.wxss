page {
	background: #f2f2f2;
}
.person_info, .comment .item .head {
	border-bottom: 2rpx solid #e1e1e1;
	height: 90rpx;
	font-size: 28rpx;
	padding: 0 3%;
	background: #fff;
}
.person_info .portrait, .comment .item .head .portrait {
	float: left;
	margin-top: 15rpx;
}
.person_info .portrait image, .comment .item .head .portrait image{
	-moz-border-radius: 30rpx;
    -webkit-border-radius: 30rpx;
  	border-radius: 30rpx;
  	width: 60rpx;
  	height: 60rpx;
}
.person_info .nickname, .comment .item .head .nickname  {
	float: left;
	margin-top: 15rpx;
	margin-left: 30rpx;
	font-size: 24rpx;
}
.person_info .nickname view, .comment .item .head .nickname view {
	height: 28rpx;
}
.person_info .nickname view:last-child, .comment .item .head .nickname view:last-child {
	color: #999;
}
.person_info .focus_btn {
	border: 2rpx solid #cb3d31;
	padding: 0 20rpx;
	text-align: center;
	float: right;
	margin-top: 18rpx;
}
.person_info .focus {	
	color: #cb3d31;
	height: 48rpx;
	line-height: 48rpx;	
	background-image:url('data:image/png;base64,');
	background-position: left center;
	background-repeat: no-repeat;
	background-size: 20rpx 20rpx;
	padding-left: 20rpx;
}
.person_info .focus .add {
	font-size: 50rpx;
}
.acticle {
	background: #fff;
	padding: 30rpx 3%;
	text-align: center;
	font-size: 32rpx;
}
.acticle .time {
	color: #bbb;
	font-size: 20rpx;
	margin: 20rpx 0;
}
.acticle .detail {
	color: #999;
	font-size: 28rpx;
	text-align: left;
	text-indent:28px;
	word-break: break-all;
}
.comment {
	margin-top: 30rpx;
	background: #fff;	
	padding-bottom: 94rpx;
}
.comment .title {
	height: 90rpx;
	line-height: 120rpx;
	padding: 0 3%;
	border-bottom: 2rpx solid #e1e1e1;
}
.comment .title .left {
	float: left;
	width: 80%;
}
.comment .title .left .zan {
	font-size: 24rpx;
	margin-left: 16rpx;
	color: #7d7d7d;
}
.comment .title .right {
	float: right;
	font-size: 30rpx;
	background-image:url('data:image/png;base64,');
	background-position: right center;
	background-repeat: no-repeat;
	background-size: 20rpx 20rpx;
	padding-right: 30rpx;
}
.comment .item {
	width: 100%;
	border-bottom: 2rpx solid #e1e1e1;
	background: #fff;
}
.comment .item .head {
	border-bottom: none;
	clear: both;
}
.comment .item .head .zan {
	float: right;
	display: flex;
	align-item: center;
	margin-top: 20rpx;
}
.comment .item .head .zan {
	heigth: 50rpx;
	line-height: 50rpx;
	color: #dddddd;
}
.comment .item .head .zan view:last-child {
	margin-left: 30rpx;
}
.comment .item .head .zan image {
	width: 50rpx;
	height: 50rpx;
}
.comment .item .detail {
	padding: 0rpx 3% 20rpx 15%;
	font-size: 28rpx;
	color: #999;
}
.action {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background-color: #424242;
	height: 94rpx;
	display: flex;
	text-align: center;
}
.action .item {
	width: 33.33%;
	height: 80rpx;
	margin-top: 10rpx;
	color: #c7c7c7;
}
.action .item:first-child {
	position: relative;
}
.action .item button {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}
.action .item view {
	font-size: 24rpx;
	margin-top: -10rpx;
}
.action .item image {
	width: 50rpx;
	height: 50rpx;
}
.select {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	z-index: 999;
	font-size:32rpx;
}
.select .item {
	background: #f7f7f7;
	border-bottom: 2rpx solid #c7c7c7;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 100rpx;
	position: relative;
}
.select .item image {
	position: absolute;
	top: 28rpx;
	left: 70rpx;
	width: 24rpx;
	height: 24rpx;
}
.select view:last-child {
	background: #424242;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color: #fff;
}
.scroll {
	padding-bottom: 94rpx;
}