page {
	background: #f2f2f2;
}
.search {
	width: 100%;
	background: #cb3d31;
	color: #cb3d31;
	text-align: center;
	padding: 20rpx;
}
.search_title {
	padding-top: 40rpx;
	color: #eee;
}
.search_form {	
	text-align: center;
	width: 80%;
	margin: auto;
}
.search_form input {
	background: #fff;
	height: 70rpx;
	line-height: 100rpx;	
	padding-left: 50rpx;
}
.log {
	margin: 80rpx auto;
	font-size: 30rpx;
	color: #b5b5b5;
	width: 90%;
}
.log .title {
	background-image: url('../../img/hot.png');
	background-size: 40rpx 40rpx;
	background-repeat: no-repeat;
	background-position: left center;
	padding: 10rpx 50rpx;
}
.log .log_info {
	display: flex;
	flex-wrap: wrap;
	-webkit-flex-wrap: wrap;
}
.log .log_info .label {
	border: 1px solid #b5b5b5;
	border-radius: 6px;
	padding: 10rpx 26rpx;
	margin: 20rpx 14rpx 0 0;
}
